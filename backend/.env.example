# Environment Configuration for SentiLex AI Advocate Multi-Agent System

# OpenAI API Configuration (Required for LLM agents)
OPENAI_API_KEY=your_openai_api_key_here

# MCP Service Configuration (Local legal knowledge source)
MCP_HOST=localhost
MCP_PORT=3000

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Audit Logging Configuration
AUDIT_LOG_DIR=logs

# LangSmith Tracing (Optional - for debugging and monitoring)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=sentilex-ai-advocate

# Model Configuration (Optional - override defaults)
# PLANNER_MODEL=gpt-4o-mini
# REASONING_MODEL=gpt-4o
# VALIDATION_MODEL=gpt-4o

# Legacy Configuration (Not used in multi-agent system)
# GOOGLE_API_KEY=AI...
# PINECONE_API_KEY=pcsk_....
# PINECONE_INDEX_NAME=law-index
# PINECONE_ENVIRONMENT=us-east-1

USE_GEMINI=false

# Database Configuration
DB_DRIVER=mysql+pymysql
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=sentilex
SQL_ECHO=false

# S3/MinIO Configuration for Document Storage
S3_ENDPOINT_URL=https://s3.amazonaws.com
S3_ACCESS_KEY=your_s3_access_key_here
S3_SECRET_KEY=your_s3_secret_key_here
S3_REGION_NAME=us-east-1
S3_BUCKET_NAME=sentilex-lawyer-verification

# For MinIO (local development), use:
# S3_ENDPOINT_URL=http://localhost:9000
# S3_ACCESS_KEY=minioadmin
# S3_SECRET_KEY=minioadmin
# S3_REGION_NAME=us-east-1
# S3_BUCKET_NAME=lawyer-verification