# Environment Configuration for SentiLex AI Advocate Multi-Agent System

# OpenAI API Configuration (Required for LLM agents)
OPENAI_API_KEY=your_openai_api_key_here

# MCP Service Configuration (Local legal knowledge source)
MCP_HOST=localhost
MCP_PORT=3000

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Audit Logging Configuration
AUDIT_LOG_DIR=logs

# LangSmith Tracing (Optional - for debugging and monitoring)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=sentilex-ai-advocate

# Model Configuration (Optional - override defaults)
# PLANNER_MODEL=gpt-4o-mini
# REASONING_MODEL=gpt-4o
# VALIDATION_MODEL=gpt-4o

# Legacy Configuration (Not used in multi-agent system)
# GOOGLE_API_KEY=AI...
# PINECONE_API_KEY=pcsk_....
# PINECONE_INDEX_NAME=law-index
# PINECONE_ENVIRONMENT=us-east-1

USE_GEMINI=false

# Database Configuration
DB_DRIVER=mysql+pymysql
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=sentilex
SQL_ECHO=false

# S3/MinIO Configuration for Document Storage
S3_ENDPOINT_URL=https://s3.amazonaws.com
S3_ACCESS_KEY=your_s3_access_key_here
S3_SECRET_KEY=your_s3_secret_key_here
S3_REGION_NAME=us-east-1
S3_BUCKET_NAME=sentilex-lawyer-verification

# For MinIO (local development), use:
# S3_ENDPOINT_URL=http://localhost:9000
# S3_ACCESS_KEY=minioadmin
# S3_SECRET_KEY=minioadmin
# S3_REGION_NAME=us-east-1
# S3_BUCKET_NAME=lawyer-verification

# =============================================
# JWT Authentication Configuration
# =============================================
# Generate secure secret: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your_jwt_secret_key_here_generate_a_secure_random_string
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# =============================================
# Password Security Configuration
# =============================================
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_SPECIAL=true
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_NUMBER=true
PASSWORD_HISTORY_COUNT=5

# =============================================
# Account Security Configuration
# =============================================
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=30
SESSION_TIMEOUT_MINUTES=60
MAX_CONCURRENT_SESSIONS=3
MAX_CONCURRENT_SESSIONS_LAWYER=5

# =============================================
# Email Configuration (SMTP)
# =============================================
# For Gmail, use: smtp.gmail.com (port 587)
# For Outlook/Hotmail: smtp-mail.outlook.com (port 587)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_USE_TLS=true
EMAIL_FROM=noreply@sentilex.lk
EMAIL_FROM_NAME=SentiLex AI Advocate
EMAIL_ENABLED=false  # Set to true to enable email sending
EMAIL_PROVIDER=smtp  # smtp, sendgrid, or ses
FRONTEND_URL=http://localhost:5173

# =============================================
# Multi-Factor Authentication (2FA)
# =============================================
MFA_ISSUER_NAME=SentiLex
MFA_BACKUP_CODES_COUNT=10
MFA_MANDATORY_FOR_ADMINS=true

# =============================================
# Security Settings
# =============================================
ALLOWED_HOSTS=localhost,127.0.0.1
ENABLE_HTTPS_REDIRECT=false
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
ENABLE_RATE_LIMITING=true
RATE_LIMIT_PER_MINUTE=60

# =============================================
# Google OAuth Configuration
# =============================================
# Get credentials from: https://console.cloud.google.com/apis/credentials
# 1. Create OAuth 2.0 Client ID
# 2. Add authorized redirect URIs:
#    - http://localhost:8000/auth/google/callback (development)
#    - https://yourdomain.com/auth/google/callback (production)
# 3. Copy Client ID and Client Secret below
GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback