# Environment Configuration for SentiLex AI Advocate Multi-Agent System

# OpenAI API Configuration (Required for LLM agents)
OPENAI_API_KEY=your_openai_api_key_here

# MCP Service Configuration (Local legal knowledge source)
MCP_HOST=localhost
MCP_PORT=3000

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Audit Logging Configuration
AUDIT_LOG_DIR=logs

# LangSmith Tracing (Optional - for debugging and monitoring)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=sentilex-ai-advocate

